  </main>

  {referredBy && (
    <script define:vars={{ referredBy }}>
      // Track referral click
      fetch(`/api/referral/${referredBy}`, { method: 'POST' }).catch(() => {});
    </script>
  )}
</Layout>

<style>
  .landing-page {
    min-height: 100vh;
    background: var(--color-charcoal-950);
    overflow-x: hidden;
  }

  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    text-align: center;
  }

  .hero-content {
    max-width: 640px;
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-copper-400);
    background: rgba(184, 115, 51, 0.1);
    border: 1px solid rgba(184, 115, 51, 0.3);
    border-radius: 2rem;
    margin-bottom: 1.5rem;
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    color: var(--color-stone-100);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .highlight {
    background: linear-gradient(135deg, var(--color-copper-400), var(--color-copper-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-stone-400);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .hero-subtitle em {
    color: var(--color-stone-300);
    font-style: italic;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-charcoal-950);
    background: var(--color-copper-500);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(184, 115, 51, 0.3);
  }

  .cta-button:hover {
    background: var(--color-copper-400);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(184, 115, 51, 0.4);
  }

  .cta-button.large {
    padding: 1.25rem 2.5rem;
    font-size: 1.25rem;
  }

  .button-icon {
    font-size: 1.25em;
    transition: transform 0.2s ease;
  }

  .cta-button:hover .button-icon {
    transform: translateX(4px);
  }

  .social-proof {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .avatars {
    display: flex;
  }

  .avatar {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    background: var(--color-charcoal-800);
    border: 2px solid var(--color-charcoal-700);
    border-radius: 50%;
    margin-left: -8px;
  }

  .avatar:first-child {
    margin-left: 0;
  }

  .proof-text {
    font-size: 0.875rem;
    color: var(--color-stone-500);
  }

  .proof-text strong {
    color: var(--color-stone-300);
  }

  /* Floating Cards */
  .hero-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .float-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--color-charcoal-800);
    border: 1px solid var(--color-charcoal-700);
    border-radius: 0.75rem;
    animation: float 6s ease-in-out infinite;
    opacity: 0.7;
  }

  .card-1 {
    top: 15%;
    right: 10%;
    animation-delay: 0s;
  }

  .card-2 {
    bottom: 25%;
    left: 8%;
    animation-delay: -2s;
  }

  .card-3 {
    top: 40%;
    left: 5%;
    animation-delay: -4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .card-emoji {
    font-size: 1.25rem;
  }

  .card-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-stone-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Sections */
  section {
    padding: 4rem 1.5rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-stone-100);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--color-stone-500);
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Learn Section */
  .learn-section {
    background: var(--color-charcoal-900);
  }

  .learn-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .learn-card {
    padding: 1.5rem;
    background: var(--color-charcoal-800);
    border: 1px solid var(--color-charcoal-700);
    border-radius: 1rem;
    transition: all 0.2s ease;
  }

  .learn-card:hover {
    border-color: var(--color-copper-600);
    transform: translateY(-4px);
  }

  .learn-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .learn-card h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-stone-100);
    margin-bottom: 0.5rem;
  }

  .learn-card p {
    font-size: 0.875rem;
    color: var(--color-stone-400);
    line-height: 1.6;
  }

  /* Categories Section */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
    max-width: 960px;
    margin: 0 auto;
  }

  .category-preview {
    padding: 1.5rem;
    background: var(--color-charcoal-800);
    border: 2px solid var(--cat-color);
    border-radius: 1rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .category-preview:hover {
    transform: scale(1.02);
  }

  .category-score {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-charcoal-950);
    background: var(--cat-color);
    border-radius: 2rem;
    margin-bottom: 0.75rem;
  }

  .category-preview h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-stone-100);
    margin-bottom: 0.5rem;
  }

  .category-preview p {
    font-size: 0.875rem;
    color: var(--color-stone-400);
    line-height: 1.5;
  }

  /* How Section */
  .how-section {
    background: var(--color-charcoal-900);
  }

  .steps-container {
    max-width: 500px;
    margin: 0 auto;
  }

  .step {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-charcoal-950);
    background: var(--color-copper-500);
    border-radius: 50%;
  }

  .step-content h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-stone-100);
    margin-bottom: 0.25rem;
  }

  .step-content p {
    font-size: 0.875rem;
    color: var(--color-stone-400);
  }

  .step-connector {
    width: 2px;
    height: 40px;
    background: var(--color-charcoal-700);
    margin: 0.5rem 0 0.5rem 23px;
  }

  /* For Section */
  .for-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 900px;
    margin: 0 auto;
    align-items: center;
  }

  .for-content h2 {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-stone-100);
    margin-bottom: 0.75rem;
  }

  .for-intro {
    color: var(--color-stone-400);
    margin-bottom: 1.5rem;
  }

  .for-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .for-list li {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    font-size: 0.9375rem;
    color: var(--color-stone-300);
  }

  .check {
    color: var(--color-forest-500);
    font-weight: 700;
  }

  .for-image {
    display: flex;
    justify-content: center;
  }

  .image-placeholder {
    width: 280px;
    height: 280px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: var(--color-charcoal-800);
    border: 2px dashed var(--color-charcoal-600);
    border-radius: 1rem;
  }

  .placeholder-icon {
    font-size: 4rem;
  }

  .placeholder-text {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-stone-400);
    text-align: center;
    line-height: 1.4;
  }

  /* Final CTA */
  .final-cta {
    background: linear-gradient(180deg, var(--color-charcoal-900), var(--color-charcoal-950));
    text-align: center;
    padding: 5rem 1.5rem;
  }

  .cta-container {
    max-width: 500px;
    margin: 0 auto;
  }

  .cta-container h2 {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-stone-100);
    margin-bottom: 0.75rem;
  }

  .cta-container p {
    font-size: 1.125rem;
    color: var(--color-stone-400);
    margin-bottom: 2rem;
  }

  .cta-note {
    display: block;
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--color-stone-600);
  }

  /* Footer */
  .landing-footer {
    text-align: center;
    padding: 2rem;
    border-top: 1px solid var(--color-charcoal-800);
  }

  .landing-footer p {
    font-size: 0.875rem;
    color: var(--color-stone-500);
    margin-bottom: 0.25rem;
  }

  .footer-link {
    color: var(--color-copper-400);
    text-decoration: none;
  }

  .footer-link:hover {
    text-decoration: underline;
  }

  .footer-note {
    font-size: 0.75rem !important;
    color: var(--color-stone-600) !important;
    font-style: italic;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 4rem 1rem;
    }

    .float-card {
      display: none;
    }

    .for-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .for-image {
      order: -1;
    }

    .image-placeholder {
      width: 200px;
      height: 200px;
    }

    .categories-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 480px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }

    .cta-button.large {
      padding: 1rem 2rem;
      font-size: 1rem;
      width: 100%;
      justify-content: center;
    }
  }
</style>
