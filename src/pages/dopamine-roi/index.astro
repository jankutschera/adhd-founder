    50% { box-shadow: 0 4px 32px rgba(184, 115, 51, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.08); }
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    color: var(--color-stone-100);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

