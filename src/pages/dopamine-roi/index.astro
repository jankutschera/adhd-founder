  }

  .problem-highlight {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    padding: 1.5rem;
    margin-top: 2rem;
    background: linear-gradient(135deg, rgba(184, 115, 51, 0.08), rgba(184, 115, 51, 0.03));
    border: 1px solid rgba(184, 115, 51, 0.3);
    border-radius: 0.75rem;
    border-left: 3px solid var(--color-copper-500);
