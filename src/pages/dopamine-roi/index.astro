  </main>

  {referredBy && (
    <script define:vars={{ referredBy }}>
      // Track referral click
      fetch(`/api/referral/${referredBy}`, { method: 'POST' }).catch(() => {});
    </script>
  )}
</Layout>

<style>
  .landing-page {
    min-height: 100vh;
    background: var(--color-charcoal-950);
    overflow-x: hidden;
  }

  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    text-align: center;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: url('/images/dopamine-roi/hero-neural.jpg') center/cover no-repeat;
    opacity: 0.08;
    z-index: 0;
  }

  .hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, transparent 0%, var(--color-charcoal-950) 70%);
    z-index: 0;
  }

  .hero-content {
    max-width: 640px;
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    color: var(--color-copper-300);
    background: linear-gradient(135deg, rgba(184, 115, 51, 0.15), rgba(184, 115, 51, 0.05));
    border: 1px solid rgba(184, 115, 51, 0.4);
    border-radius: 2rem;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(8px);
    box-shadow: 0 4px 24px rgba(184, 115, 51, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.05);
    animation: badge-glow 3s ease-in-out infinite;
  }

  @keyframes badge-glow {
    0%, 100% { box-shadow: 0 4px 24px rgba(184, 115, 51, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.05); }
    50% { box-shadow: 0 4px 32px rgba(184, 115, 51, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.08); }
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    color: var(--color-stone-100);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .highlight {
    background: linear-gradient(135deg, var(--color-copper-400), var(--color-copper-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-stone-400);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .hero-subtitle em {
    color: var(--color-stone-300);
    font-style: italic;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    color: var(--color-charcoal-950);
    background: linear-gradient(135deg, var(--color-copper-400), var(--color-copper-500));
    border-radius: 0.625rem;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow:
      0 4px 20px rgba(184, 115, 51, 0.35),
      0 0 0 0 rgba(184, 115, 51, 0),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .cta-button:hover {
    background: linear-gradient(135deg, var(--color-copper-300), var(--color-copper-400));
    transform: translateY(-3px) scale(1.02);
    box-shadow:
      0 12px 40px rgba(184, 115, 51, 0.45),
      0 0 0 4px rgba(184, 115, 51, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button.large {
    padding: 1.25rem 2.5rem;
    font-size: 1.25rem;
  }

  .button-icon {
    font-size: 1.25em;
    transition: transform 0.2s ease;
  }

  .cta-button:hover .button-icon {
    transform: translateX(4px);
  }

  .social-proof {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .avatars {
    display: flex;
  }

  .avatar {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    background: var(--color-charcoal-800);
    border: 2px solid var(--color-charcoal-700);
    border-radius: 50%;
    margin-left: -8px;
  }

  .avatar:first-child {
    margin-left: 0;
  }

  .proof-text {
    font-size: 0.875rem;
    color: var(--color-stone-500);
  }

  .proof-text strong {
    color: var(--color-stone-300);
  }

  /* Floating Cards */
  .hero-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .float-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--color-charcoal-800);
    border: 1px solid var(--color-charcoal-700);
    border-radius: 0.75rem;
    animation: float 6s ease-in-out infinite;
    opacity: 0.7;
  }

  .card-1 {
    top: 15%;
    right: 10%;
    animation-delay: 0s;
  }

  .card-2 {
    bottom: 25%;
    left: 8%;
    animation-delay: -2s;
  }

  .card-3 {
    top: 40%;
    left: 5%;
    animation-delay: -4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .card-emoji {
    font-size: 1.25rem;
  }

  .card-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-stone-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Sections */
  section {
    padding: 4rem 1.5rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-stone-100);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--color-stone-500);
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Learn Section */
  .learn-section {
    background: var(--color-charcoal-900);
  }

  .learn-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .learn-card {
    padding: 1.75rem;
    background: linear-gradient(145deg, var(--color-charcoal-800), rgba(28, 28, 31, 0.8));
    border: 1px solid var(--color-charcoal-700);
    border-radius: 1rem;
    transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  .learn-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-copper-500), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .learn-card:hover {
    border-color: var(--color-copper-600);
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(184, 115, 51, 0.1);
  }

  .learn-card:hover::before {
    opacity: 1;
  }

  .learn-icon {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .learn-card h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-stone-100);
    margin-bottom: 0.5rem;
  }

  .learn-card p {
    font-size: 0.875rem;
    color: var(--color-stone-400);
    line-height: 1.6;
  }

  /* Categories Section */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
    max-width: 960px;
    margin: 0 auto;
  }

  .category-preview {
    padding: 1.75rem;
    background: linear-gradient(160deg, var(--color-charcoal-800), rgba(15, 15, 16, 0.9));
    border: 2px solid var(--cat-color);
    border-radius: 1rem;
    text-align: center;
    transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  .category-preview::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 0%, var(--cat-color), transparent 60%);
    opacity: 0.08;
    transition: opacity 0.3s ease;
  }

  .category-preview:hover {
    transform: scale(1.03) translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 30px color-mix(in srgb, var(--cat-color) 20%, transparent);
  }

  .category-preview:hover::before {
    opacity: 0.15;
  }

  .category-score {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-charcoal-950);
    background: var(--cat-color);
    border-radius: 2rem;
    margin-bottom: 0.75rem;
  }

  .category-preview h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-stone-100);
    margin-bottom: 0.5rem;
  }

  .category-preview p {
    font-size: 0.875rem;
    color: var(--color-stone-400);
    line-height: 1.5;
  }

  /* How Section */
  .how-section {
    background: var(--color-charcoal-900);
  }

  .steps-container {
    max-width: 500px;
    margin: 0 auto;
  }

  .step {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-charcoal-950);
    background: linear-gradient(135deg, var(--color-copper-400), var(--color-copper-600));
    border-radius: 50%;
    box-shadow:
      0 4px 16px rgba(184, 115, 51, 0.4),
      inset 0 2px 4px rgba(255, 255, 255, 0.2);
    position: relative;
  }

  .step-number::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 1px solid rgba(184, 115, 51, 0.3);
  }

  .step-content h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-stone-100);
    margin-bottom: 0.25rem;
  }

  .step-content p {
    font-size: 0.875rem;
    color: var(--color-stone-400);
  }

  .step-connector {
    width: 2px;
    height: 40px;
    background: var(--color-charcoal-700);
    margin: 0.5rem 0 0.5rem 23px;
  }

  /* For Section */
  .for-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 900px;
    margin: 0 auto;
    align-items: center;
  }

  .for-content h2 {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-stone-100);
    margin-bottom: 0.75rem;
  }

  .for-intro {
    color: var(--color-stone-400);
    margin-bottom: 1.5rem;
  }

  .for-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .for-list li {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    font-size: 0.9375rem;
    color: var(--color-stone-300);
  }

  .check {
    color: var(--color-forest-500);
    font-weight: 700;
  }

  .for-image {
    display: flex;
    justify-content: center;
  }

  .founder-image {
    width: 320px;
    height: 320px;
    object-fit: cover;
    border-radius: 1rem;
    border: 2px solid var(--color-charcoal-700);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .founder-image:hover {
    transform: scale(1.02);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
  }

  /* Final CTA */
  .final-cta {
    background: linear-gradient(180deg, var(--color-charcoal-900), var(--color-charcoal-950));
    text-align: center;
    padding: 5rem 1.5rem;
  }

  .cta-container {
    max-width: 500px;
    margin: 0 auto;
  }

  .cta-container h2 {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-stone-100);
    margin-bottom: 0.75rem;
  }

  .cta-container p {
    font-size: 1.125rem;
    color: var(--color-stone-400);
    margin-bottom: 2rem;
  }

  .cta-note {
    display: block;
    margin-top: 1rem;
    font-size: 0.875rem;
    color: var(--color-stone-600);
  }

  /* Footer */
  .landing-footer {
    text-align: center;
    padding: 2rem;
    border-top: 1px solid var(--color-charcoal-800);
  }

  .landing-footer p {
    font-size: 0.875rem;
    color: var(--color-stone-500);
    margin-bottom: 0.25rem;
  }

  .footer-link {
    color: var(--color-copper-400);
    text-decoration: none;
  }

  .footer-link:hover {
    text-decoration: underline;
  }

  .footer-note {
    font-size: 0.75rem !important;
    color: var(--color-stone-600) !important;
    font-style: italic;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 4rem 1rem;
    }

    .float-card {
      display: none;
    }

    .for-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .for-image {
      order: -1;
    }

    .founder-image {
      width: 240px;
      height: 240px;
