    overflow: hidden;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .cta-button:hover {
    background: linear-gradient(135deg, var(--color-copper-300), var(--color-copper-400));
    transform: translateY(-3px) scale(1.02);
    box-shadow:
      0 12px 40px rgba(184, 115, 51, 0.45),
      0 0 0 4px rgba(184, 115, 51, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button.large {
    padding: 1.25rem 2.5rem;
    font-size: 1.25rem;
  }

  .button-icon {
    font-size: 1.25em;
    transition: transform 0.2s ease;
  }

  .cta-button:hover .button-icon {
    transform: translateX(4px);
  }

  .social-proof {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-top: 2rem;
  }

