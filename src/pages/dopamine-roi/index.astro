  }

  /* Floating Cards */
  .hero-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .float-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--color-charcoal-800);
    border: 1px solid var(--color-charcoal-700);
    border-radius: 0.75rem;
    animation: float 6s ease-in-out infinite;
    opacity: 0.7;
  }

  .card-1 {
