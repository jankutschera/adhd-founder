---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "German Engineering for the ADHD Brain. Systems and strategies for neurodivergent founders diagnosed later in life.",
  image = "/og-image.jpg"
} = Astro.props;

const siteUrl = "https://adhd-founder.com";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | ADHD Founder</title>
    <meta name="title" content={`${title} | ADHD Founder`} />
    <meta name="description" content={description} />
    <meta name="author" content="Jan Kutschera" />
    <meta name="keywords" content="ADHD founder, ADHD entrepreneur, late diagnosis ADHD, neurodivergent business, ADHD CEO, executive ADHD coaching, ADHD productivity systems, German engineering ADHD" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | ADHD Founder`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:site_name" content="ADHD Founder" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | ADHD Founder`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${siteUrl}${image}`} />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Jan Kutschera",
        "url": "https://adhd-founder.com",
        "jobTitle": "ADHD Founder & Executive Coach",
        "description": "German founder diagnosed with ADHD at 51. Building systems for neurodivergent entrepreneurs.",
        "sameAs": [
          "https://linkedin.com/in/jankutschera",
          "https://twitter.com/jankutschera"
        ]
      }
    </script>
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
</html>
