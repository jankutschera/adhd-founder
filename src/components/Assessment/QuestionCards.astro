---
interface Option {
  value: string;
  label: string;
  description?: string;
  icon?: string;
}

interface Props {
  id: string;
  title: string;
  subtitle?: string;
  options: Option[];
  selected?: string;
}

const { id, title, subtitle, options, selected } = Astro.props;
---

<div class="question-container" data-question-type="cards" data-question-id={id}>
  <div class="question-header">
    <h2 class="headline-md">{title}</h2>
    {subtitle && <p class="subtitle">{subtitle}</p>}
  </div>

  <div class="cards-grid" role="radiogroup" aria-label={title}>
    {options.map((option) => (
      <label class={`option-card ${selected === option.value ? 'selected' : ''}`}>
        <input
          type="radio"
          name={id}
          value={option.value}
          checked={selected === option.value}
          class="sr-only"
        />
        <div class="card-content">
          {option.icon && <span class="card-icon">{option.icon}</span>}
          <span class="card-label">{option.label}</span>
          {option.description && (
            <span class="card-description">{option.description}</span>
          )}
        </div>
        <div class="card-check">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
            <path d="M5 13l4 4L19 7" />
          </svg>
        </div>
      </label>
    ))}
  </div>
</div>

<style>
  .question-container {
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
  }

  .question-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .headline-md {
    color: var(--color-stone-100);
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-stone-400);
    font-size: 1rem;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .cards-grid {
      grid-template-columns: 1fr;
    }
  }

  .option-card {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    background: var(--color-charcoal-800);
    border: 2px solid var(--color-charcoal-700);
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
    min-height: 100px;
  }

  .option-card:hover {
    border-color: var(--color-charcoal-500);
    transform: translateY(-2px);
  }

  .option-card.selected {
    border-color: var(--color-copper-500);
    background: var(--color-charcoal-800);
    box-shadow:
      0 0 0 1px var(--color-copper-500),
      0 0 20px rgba(184, 115, 51, 0.2);
  }

  .option-card:focus-within {
    outline: 2px solid var(--color-copper-400);
    outline-offset: 2px;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .card-icon {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .card-label {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-stone-100);
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--color-stone-400);
  }

  .card-check {
    width: 24px;
    height: 24px;
    border: 2px solid var(--color-charcoal-600);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .card-check svg {
    width: 14px;
    height: 14px;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .option-card.selected .card-check {
    background: var(--color-copper-500);
    border-color: var(--color-copper-500);
  }

  .option-card.selected .card-check svg {
    opacity: 1;
    color: var(--color-charcoal-950);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<script>
  document.querySelectorAll('.question-container[data-question-type="cards"]').forEach(container => {
    const cards = container.querySelectorAll('.option-card');
    const questionId = container.getAttribute('data-question-id');

    cards.forEach(card => {
      const input = card.querySelector('input[type="radio"]') as HTMLInputElement;

      card.addEventListener('click', () => {
        // Update visual state
        cards.forEach(c => c.classList.remove('selected'));
        card.classList.add('selected');

        // Haptic feedback
        if ('vibrate' in navigator) {
          navigator.vibrate(20);
        }

        // Dispatch event
        container.dispatchEvent(new CustomEvent('answer-change', {
          bubbles: true,
          detail: { id: questionId, value: input.value }
        }));
      });
    });
  });
</script>
