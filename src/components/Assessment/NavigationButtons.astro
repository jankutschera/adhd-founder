---
interface Props {
  showBack?: boolean;
  showNext?: boolean;
  showSkip?: boolean;
  nextLabel?: string;
  backLabel?: string;
  skipLabel?: string;
  nextDisabled?: boolean;
}

const {
  showBack = true,
  showNext = true,
  showSkip = false,
  nextLabel = 'Continue',
  backLabel = 'Back',
  skipLabel = 'Skip for now',
  nextDisabled = true
} = Astro.props;
---

<div class="navigation-container">
  <div class="nav-row">
    {showBack && (
      <button type="button" class="nav-button back-button" data-action="back">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="nav-icon">
          <path d="M19 12H5m7-7l-7 7 7 7" />
        </svg>
        <span>{backLabel}</span>
      </button>
    )}

    {showNext && (
      <button
        type="button"
        class="nav-button next-button"
        data-action="next"
        disabled={nextDisabled}
      >
        <span>{nextLabel}</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="nav-icon">
          <path d="M5 12h14m-7-7l7 7-7 7" />
        </svg>
      </button>
    )}
  </div>

  {showSkip && (
    <button type="button" class="skip-button" data-action="skip">
      {skipLabel}
    </button>
  )}
</div>

<style>
  .navigation-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    width: 100%;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .nav-row {
    display: flex;
    justify-content: space-between;
    width: 100%;
    gap: 1rem;
  }

  .nav-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    font-family: var(--font-display);
    font-weight: 600;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .nav-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .back-button {
    color: var(--color-stone-400);
    background: transparent;
    border: 2px solid var(--color-charcoal-700);
  }

  .back-button:hover {
    color: var(--color-stone-200);
    border-color: var(--color-charcoal-500);
    transform: translateX(-2px);
  }

  .next-button {
    flex: 1;
    justify-content: center;
    color: var(--color-charcoal-950);
    background: linear-gradient(135deg, var(--color-copper-400), var(--color-copper-500));
    border: none;
  }

  .next-button:not(:disabled):hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(184, 115, 51, 0.4);
  }

  .next-button:not(:disabled):active {
    transform: translateY(0);
  }

  .next-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .next-button:hover .nav-icon {
    transform: translateX(4px);
  }

  .nav-icon {
    transition: transform 0.2s ease;
  }

  .back-button:hover .nav-icon {
    transform: translateX(-4px);
  }

  .skip-button {
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    color: var(--color-stone-500);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color 0.2s ease;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .skip-button:hover {
    color: var(--color-stone-300);
  }

  /* Only next button visible - center it */
  .nav-row:has(.next-button:only-child) {
    justify-content: center;
  }

  .nav-row .next-button:only-child {
    flex: 0 1 auto;
    min-width: 200px;
  }

  /* Keyboard navigation indicator */
  .nav-button:focus-visible {
    outline: 2px solid var(--color-copper-400);
    outline-offset: 2px;
  }

  /* Touch feedback */
  @media (hover: none) {
    .nav-button:active {
      transform: scale(0.98);
    }
  }
</style>

<script>
  document.querySelectorAll('.navigation-container').forEach(container => {
    const buttons = container.querySelectorAll('[data-action]');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const action = button.getAttribute('data-action');

        // Haptic feedback
        if ('vibrate' in navigator) {
          navigator.vibrate(15);
        }

        // Dispatch navigation event
        container.dispatchEvent(new CustomEvent('nav-action', {
          bubbles: true,
          detail: { action }
        }));
      });
    });
  });

  // Keyboard navigation support
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.target?.closest('input, textarea, select')) {
      const nextButton = document.querySelector('.next-button:not(:disabled)') as HTMLButtonElement;
      if (nextButton) {
        nextButton.click();
      }
    }
  });
</script>
